<h1> Hey bro, make a new item:</h2>

<%= form_for @item do |f| %>
<div>
    <%= f.label "Item Name" %>
    <%= f.text_field :name %>
  </div>

<div>
    <%= f.label "Item Description" %>
    <%= f.text_field :description %>
  </div>
<div>
    <%= f.label "Item Category" %>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label "Approximate Value" %>
    $<%= f.text_field :value %>
  </div>
<%= f.submit %>
<% end %>



